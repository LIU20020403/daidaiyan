/* pages/me/me.wxss */
.body{
  display: inline-block;
  position: relative;
  justify-content:center;

  width: 100%;

  height: 600px;
  background-repeat: repeat-y;
  background-image: linear-gradient(180deg, #2af598 0%, #009efd 100%);
}
.upload_container{
  height: 300rpx;
  width: fit-content;
}
.button{
  background-color: #EA5149;
  margin-top: 100rpx;
}
.name{
  font-family: Georgia, 'Times New Roman', Times, serif;
  text-align: center;
  padding-top: 20px;
  font-size: 25px;
}
.imagesize{
  display:flex;                    
  justify-content: center; 
}
.imagesize image{
  margin-top: 20px;
  border-radius: 100px;
  height: 150px;
  width: 150px;
}
.none text{
  color: gray;
  font-size: 25px;
  display: flex;
  flex-direction: column;
  align-items: center;
}